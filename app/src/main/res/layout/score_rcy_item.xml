<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardElevation="3dp"
    android:layout_marginTop="5dp"
    android:id="@+id/exam_rcy_cardView">


    <TextView
        android:lines="1"
        android:ellipsize="end"
        android:maxEms="10"
        android:id="@+id/exam_rcy_name"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/ic_local_offer_black_24dp"
        android:drawableEnd="@drawable/ic_local_offer_black_24dp"
        android:drawablePadding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="软件工程导论"
        android:textColor="@color/black"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/ic_access_time_green_24dp"
            android:contentDescription="时间" />
        <TextView
            android:id="@+id/exam_rcy_time"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2017年-06-07 周六 09:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/ic_place_green_24dp"
            android:contentDescription="时间" />
        <TextView
            android:id="@+id/exam_rcy_place"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="二教E310" />

    </LinearLayout>

    <TextView
        android:layout_gravity="end"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="还有"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/exam_rcy_remainTime"
        android:layout_gravity="end"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="20天"
        android:textColor="@color/blue500"
        android:textSize="30sp"/>
</android.support.v7.widget.CardView>